header.mainheader
  .top-line
    .container
      .top-line__left
        ul.socials.top-line__socials
          li.socials__item
            a(href="#").socials__link
              +icon('google')
          li.socials__item
            a(href="#").socials__link
              +icon('twitter')
          li.socials__item
            a(href="#").socials__link
              +icon('facebook-with-circle')
      .top-line__right
        ul.contacts.top-line__contacts
          li.contacts__item
            a(href="#").contacts__link
              +icon('phone')
              span.contacts__link-text + (84). 169. 275. 9059
          li.contacts__item
            a(href="#").contacts__link
              +icon('mail')
              span.contacts__link-text cavoicat@gmail.com
  .container
    .mainheader__inner
      .logo
        a(href="/")
          img(src="img/logo.png", alt="Logo")
      a(href="#").btn--navigation-toggle
        span
      ul.main-nav
        each item, key in {"l'azienda": '/', 'opere principali': 'portfolio.html',  'Settori': '#settori', 'qualita': '#certs', 'contatti': ''}
          li.main-nav__item
            a(href= item).main-nav__link= key

  .banner.banner--secondary
  .breadcrumbs
    .container
      .row
        .col-xs-12
          a.breadcrumbs__link(href="#") Home
          a.breadcrumbs__link(href="#") Portfolio
          a.breadcrumbs__link.breadcrumbs__link--active(href="#") Portfolio-item
