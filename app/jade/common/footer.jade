      .row
        .col-md-3.col-sm-6.hidden-xs
          h4.mainfooter__title Navigation
        .col-md-3.col-sm-6
          h4.mainfooter__title Information
        .col-md-3.hidden-sm.hidden-xs
          h4.mainfooter__title Contact
        .col-md-3.hidden-sm.hidden-xs
          h4.mainfooter__title Maps
